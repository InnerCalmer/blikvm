[Unit]
Description=BLIKVM - web controller daemon
After=network.target busybox-syslogd.service
Requires=network.target busybox-syslogd.service

[Service]
Type=simple
User=root
ExecStartPre=/bin/sleep 60
WorkingDirectory=/usr/bin/blikvm/release
ExecStart=/usr/bin/blikvm/release/server_app
RemainAfterExit=true
Restart=always

[Install]
WantedBy=local-fs.target